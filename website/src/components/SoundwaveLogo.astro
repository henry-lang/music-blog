---
import "../styles/sound-wave.scss"
---
<div class="soundwave-container">
    <div class="portrait-container">
        <div class="soundwave-line soundwave-portrait med"></div>
        <div class="soundwave-line soundwave-portrait small"></div>
        <div class="soundwave-line soundwave-portrait large"></div>
        <div class="soundwave-line soundwave-portrait med"></div>
        <div class="soundwave-line soundwave-portrait small"></div>
        <div class="soundwave-line soundwave-portrait large"></div>
        <div class="soundwave-line soundwave-portrait med"></div>
        <div class="soundwave-line soundwave-portrait x-large"></div>
        <div class="soundwave-line soundwave-portrait small"></div>
        <div class="soundwave-line soundwave-portrait large"></div>
        <div class="soundwave-line soundwave-portrait med"></div>
        <div class="soundwave-line soundwave-portrait small"></div>
    </div>
    <div class="soundwave-line soundwave-landscape"></div>
</div>
<style lang="scss">
    @keyframes soundwave-open-landscape {
        0% {
            transform: scale(0, 0.125)
        }

        50% {
            transform: scale(1, 0.125)
        }
    }

    @keyframes open-portrait {
        0% {
            transform: scale(1, 0)
        }

        50% {
            transform: scale(1, 1)
        }
    }
    .soundwave-line {
        background-color: #f8686d;
        border: none;
        border-radius: 20rem;
    }

    .soundwave-landscape {
        animation: soundwave-open-landscape 2s 1;
        height: 0.25rem;
        width: 20rem;
    }
    
    .small {
        margin-top: 3rem;
        height: 2rem;
    }
        
    .med {
        margin-top: 2rem;
        height: 3rem;
    }
    
    .large {
        margin-top: 1rem;
        height: 4rem;
    }
    
    .x-large {
        height: 5rem;
    }

    .soundwave-portrait {
        // animation-delay: 2s;
        width: 0.25rem;
        margin-right: 1.54rem;
        // bottom: 0;
        animation: open-portrait 2s 1;
    }



    .portrait-container {
        display: flex;
        :last-child {
            margin-right: 0;
        }
        margin-bottom: 0.5rem;
    }

    .soundwave-container {
        margin-left: 4.5rem;
    }
</style>