---
export interface Props {
    name: string
}

const { name } = Astro.props as Props;
---

<style lang="scss">
    @use "../styles/variables.scss" as *;

    .tag {
        background-color: $accent;
        color: $mg;
        padding: 0.1rem;
        text-decoration: none;
        border-radius: 3px;
    }
</style>

<a class="tag" href="/">{name}</a>